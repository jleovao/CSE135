  <servlet>
    <servlet-name>redirectlogin</servlet-name>
    <jsp-file>/redirectlogin.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>redirectaccess</servlet-name>
    <jsp-file>/redirectaccess.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>confirmation</servlet-name>
    <jsp-file>/confirmation.jsp</jsp-file>
  </servlet>
  
  <servlet>
  	<servlet-name>analytics</servlet-name>
  	<jsp-file>/analytics.jsp</jsp-file>
  </servlet>
  
  <servlet>
  	<servlet-name>similar_products</servlet-name>
  	<jsp-file>/similar_products.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signup</servlet-name>
