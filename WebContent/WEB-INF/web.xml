<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
  <display-name>Shopping App</display-name>
  <description>
    This application demonstrates how SQL queries are executed
	within JSP pages
  </description>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  
  <servlet>
  <servlet-name>signup</servlet-name>
    <jsp-file>/signup.jsp</jsp-file>
  </servlet>
  <servlet>
  <servlet-name>signupsuccess</servlet-name>
    <jsp-file>/signupsuccess.jsp</jsp-file>
  </servlet>
  <servlet>
  <servlet-name>signupfail</servlet-name>
    <jsp-file>/signupfail.jsp</jsp-file>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>signup</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>signupsuccess</servlet-name>
    <url-pattern>signupsuccess</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>signupfail</servlet-name>
    <url-pattern>signupfail</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
  	<welcome-file>
  	  login
  	</welcome-file>
  </welcome-file-list>
  

</web-app>