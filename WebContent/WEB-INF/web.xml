<web-app>
  <display-name>Shopping App</display-name>
  <description>
    This application demonstrates how SQL queries are executed
	within JSP pages
  </description>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <jsp-file>/login.jsp</jsp-file>
  </servlet>
  
  <servlet>
  <servlet-name>signup</servlet-name>
    <jsp-file>/signup.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>signupsuccess</servlet-name>
    <jsp-file>/signupsuccess.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>signupfail</servlet-name>
    <jsp-file>/signupfail.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>home</servlet-name>
    <jsp-file>/index.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>browsing</servlet-name>
    <jsp-file>/browsing.jsp</jsp-file>
  </servlet>
  
  <servlet>
    <servlet-name>categories</servlet-name>
    <jsp-file>/categories.jsp</jsp-file>
  </servlet>
  
